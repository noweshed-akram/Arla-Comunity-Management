                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/short_stature_women"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/underweight_women"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/overweight_obese_women"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/low_birth_weight"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/stunting"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/underweight2"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/wasting"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/anemia_non_pregnant_non_lactating_women"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/anemia_pregnant_women"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/anemia_child"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/vitamin_a_deficiency"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="2dp"
                android:layout_height="310dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorBlack" />

            <View
                android:layout_width="2dp"
                android:layout_height="310dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorBlack" />

            <View
                android:layout_width="2dp"
                android:layout_height="310dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorBlack" />

            <View
                android:layout_width="2dp"
                android:layout_height="310dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorBlack" />

            <ProgressBar
