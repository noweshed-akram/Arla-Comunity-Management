                android:progressDrawable="@drawable/progressbar_status_yellow5dp"
                android:rotation="90" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="85dp"
                android:progress="66"
                android:progressDrawable="@drawable/progressbar_status_sky5dp"
                android:rotation="90" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="115dp"
                android:progress="92"
                android:progressDrawable="@drawable/progressbar_status_sky5dp"
                android:rotation="90" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="140dp"
                android:progress="82"
                android:progressDrawable="@drawable/progressbar_status_sky5dp"
                android:rotation="90" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="170dp"
                android:progress="48"
                android:progressDrawable="@drawable/progressbar_status_sky5dp"
                android:rotation="90" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="200dp"
                android:progress="90"
                android:progressDrawable="@drawable/progressbar_status_yellow5dp"
                android:rotation="90" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_marginLeft="5dp"
