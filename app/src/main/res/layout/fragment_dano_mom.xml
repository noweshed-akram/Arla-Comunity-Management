<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.DanoMom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/danoMom_viewPager"
            android:layout_width="match_parent"
            android:layout_height="535dp">

        </android.support.v4.view.ViewPager>

        <TextView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@drawable/dano_mom_corner_logo"
            android:gravity="right"
            android:layout_marginLeft="895dp"
            />


    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/danoMomhomeFromTabLayoutBT"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="#fff"
            android:src="@drawable/home" />

        <android.support.design.widget.TabLayout
            android:id="@+id/danoMom_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/compeitition_table_white_bg"
            android:elevation="10dp"
            android:minHeight="?attr/actionBarSize"
            app:tabBackground="@drawable/tab_bg"
            app:tabGravity="center"
            app:tabIndicator="@color/colorWhite"
            app:tabMode="scrollable"
            app:tabTextColor="@color/colorBlack">

        </android.support.design.widget.TabLayout>


    </LinearLayout>


</LinearLayout>