        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/vitamins_d_icon" />


        <TextView


            android:layout_width="wrap_content"


            android:layout_height="wrap_content"


            android:layout_marginStart="20dp"


